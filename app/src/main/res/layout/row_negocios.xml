<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:background="@drawable/borde_layout"
        android:layout_width="wrap_content"
        android:layout_height="130dp"
        android:padding="5dp">

        <RelativeLayout
            android:id="@+id/cuponSuperior"
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:layout_marginTop="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/ivLogoNegocio"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="2dp"
                        android:layout_marginTop="1dp"
                        android:background="@mipmap/ic_launcher" />

                    <ProgressBar
                        android:id="@+id/progressBarNegocio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp" />

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginLeft="10dp">

                    <TextView
                        android:id="@+id/tvNombreNegocio"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="75dp"
                        android:layout_marginTop="1dp"
                        android:text="Rokys"
                        android:textColor="@android:color/black"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvDescripcionNegocio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="2dp"
                        android:layout_marginTop="1dp"
                        android:text="Restaurante de parrillas, pollos y comidas en general"
                        android:textColor="@android:color/black" />

                    <TextView
                        android:id="@+id/tvDireccionNegocio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="2dp"
                        android:layout_marginTop="1dp"
                        android:text="Address"
                        android:textColor="@android:color/black" />

                    <TextView
                        android:id="@+id/tvEstadoNegocio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="2dp"
                        android:layout_marginTop="1dp"
                        android:text="Open"
                        android:textColor="@android:color/holo_green_light" />

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/tvDistancia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="2dp"
                android:layout_marginTop="1dp"
                android:text="15 mts"
                android:textColor="@android:color/black" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnPromocion"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/ic_megafono"
                    android:focusable="false"
                    android:focusableInTouchMode="false"/>


                <Button
                    android:id="@+id/btnLlamarNegocio"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/ic_telefono"
                    android:focusable="false"
                    android:focusableInTouchMode="false" />

                <Button
                    android:id="@+id/btnMapaNegocio"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/un_negocio"
                    android:focusable="false"
                    android:focusableInTouchMode="false" />

            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>
